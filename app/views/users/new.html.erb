<div id="container">
  <div class="d-flex justify-content-between">
    <div class="p-2">
      <% if flash[:errors] %>
        <div class="alert alert-danger" role="alert" >
          <% flash[:errors].each do |error| %>
              <p><strong>ERROR</strong> <%= error %></p>
          <% end %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-warning" role="alert" >
          <p><strong>Sorry!</strong> <%= flash[:alert] %></p>
        </div>
      <% end %>
        <h1>Register</h1>
        <form action="/users" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <div class="form-group">
            <label for="formGroupExampleInput">First Name</label>
            <input type="text" class="form-control" id="formGroupExampleInput" name="user[first_name]" placeholder="David">
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Last Name</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" name="user[last_name]" placeholder="Pitz">
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput">Email</label>
            <input type="text" class="form-control" id="formGroupExampleInput" name="user[email]" placeholder="djp@gmail.com">
          </div>
          <div class="form-group">
                <label for="formGroupExampleInput">Password</label>
                <input type="password" class="form-control" id="formGroupExampleInput" name="user[password]" placeholder="Password123">
            </div>
           <div class="form-group">
               <label for="formGroupExampleInput">Confirm Password</label>
               <input type="password" class="form-control" id="formGroupExampleInput" name="user[password_confirmation]" placeholder="Password123">
           </div>
           <br>
         <button type="submit" class="btn btn-primary">Create User</button>
        </form>
    </div>
    <div class="p-2">
      <div class="d-flex justify-content-between">
            <div class="p-2"><h1>Sign In</h1></div>
        </div>
        <% if flash[:error] %>
            <div class="alert alert-danger" role="alert">
                <p><strong>ERROR</strong> <%= flash[:error] %></p>
            </div>
        <% end %>
        <% if flash[:success] %>
        <div class="alert alert-success" role="alert" >
          <p><strong>Success!</strong> <%= flash[:success] %></p>
        </div>
        <% end %>
        <form action="/sessions" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <div class="form-group">
                <label for="formGroupExampleInput">Email</label>
                <input type="text" class="form-control" id="formGroupExampleInput" name="user[email]" placeholder="Jon@gmail.com">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Password</label>
                <input type="password" class="form-control" id="formGroupExampleInput" name="user[password]" placeholder="Password123">
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
      </div>
    </div>
  </div>
</div>
